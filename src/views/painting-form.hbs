    <br>
    <label for="img">Img </label>
    <input type="text" name="img" id="img">
    <br>
    <label for="description">Description</label>
    <textarea rows="4" cols="50" name="description" id="description"></textarea>
    <br>
    <input type="submit" value="Add">

</form>