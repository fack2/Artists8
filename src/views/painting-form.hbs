<form action="/painting-form" method="POST">

    <label for="artistID">Artisi Name</label>
    <select name=artistID id="artistID">
        {{#each artists}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    <br>
    <label for="paintName">Paint Name</label>
    <input type="text" name="paintName" id="paintName">
